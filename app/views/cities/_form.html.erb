<%= form_for @city, :html => { :class => "form-horizontal city" } do |f| %>

    <% if @city.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @city.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :city_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city_id, :class => 'form-control' %>
    </div>
    <%= error_span(@city[:city_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :city_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city_name, :class => 'form-control' %>
    </div>
    <%= error_span(@city[:city_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            cities_path, :class => 'btn btn-default' %>

<% end %>
