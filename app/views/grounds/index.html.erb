<%- model_class = Ground -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ground_id) %></th>
      <th><%= model_class.human_attribute_name(:ground_name) %></th>
      <th><%= model_class.human_attribute_name(:ground_description) %></th>
      <th><%= model_class.human_attribute_name(:sc_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @grounds.each do |ground| %>
      <tr>
        <td><%= link_to ground.id, ground_path(ground) %></td>
        <td><%= ground.ground_id %></td>
        <td><%= ground.ground_name %></td>
        <td><%= ground.ground_description %></td>
        <td><%= ground.sc_id %></td>
        <td><%=l ground.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ground_path(ground), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ground_path(ground),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ground_path,
            :class => 'btn btn-primary' %>
