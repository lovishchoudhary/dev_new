<%- model_class = Facility -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:sc_id) %></th>
      <th><%= model_class.human_attribute_name(:refreshment) %></th>
      <th><%= model_class.human_attribute_name(:parking) %></th>
      <th><%= model_class.human_attribute_name(:sports_shop) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= link_to facility.id, facility_path(facility) %></td>
        <td><%= facility.sc_id %></td>
        <td><%= facility.refreshment %></td>
        <td><%= facility.parking %></td>
        <td><%= facility.sports_shop %></td>
        <td><%=l facility.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_facility_path(facility), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      facility_path(facility),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_facility_path,
            :class => 'btn btn-primary' %>
