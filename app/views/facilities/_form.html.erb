<%= form_for @facility, :html => { :class => "form-horizontal facility" } do |f| %>

    <% if @facility.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@facility.errors.count, "error") %> prohibited this facility from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @facility.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :sc_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sc_id, :class => 'form-control' %>
    </div>
    <%= error_span(@facility[:sc_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :refreshment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :refreshment, :class => 'form-control' %>
    </div>
    <%= error_span(@facility[:refreshment]) %>
  </div>
  <div class="control-group">
    <%= f.label :parking, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :parking, :class => 'form-control' %>
    </div>
    <%= error_span(@facility[:parking]) %>
  </div>
  <div class="control-group">
    <%= f.label :sports_shop, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sports_shop, :class => 'form-control' %>
    </div>
    <%= error_span(@facility[:sports_shop]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            facilities_path, :class => 'btn btn-default' %>

<% end %>
