<%= form_for @sc, :html => { :class => "form-horizontal sc" } do |f| %>

    <% if @sc.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sc.errors.count, "error") %> prohibited this sc from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sc.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :scs_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :scs_id, :class => 'form-control' %>
    </div>
    <%= error_span(@sc[:scs_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :city_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city_id, :class => 'form-control' %>
    </div>
    <%= error_span(@sc[:city_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :sc_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sc_name, :class => 'form-control' %>
    </div>
    <%= error_span(@sc[:sc_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :sc_location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sc_location, :class => 'form-control' %>
    </div>
    <%= error_span(@sc[:sc_location]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            scs_path, :class => 'btn btn-default' %>

<% end %>
